<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
  ios:Page.UseSafeArea="true"
  x:Class="CoursesApp.Pages.ListStudentPage"
  x:DataType="viewModels:CourseViewModel"
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
  xmlns:viewModels="clr-namespace:CoursesApp.ViewModels;assembly=CoursesApp.ViewModels"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
  <StackLayout Padding="20">
    <Label
      FontSize="24"
      HorizontalOptions="Start"
      Text="Course:" />
    <Label
      FontSize="24"
      HorizontalOptions="Start"
      Text="{Binding Title}" />

    <CollectionView ItemsSource="{Binding Students}">
      <CollectionView.ItemTemplate>
        <DataTemplate x:DataType="viewModels:StudentViewModel">
          <Frame
            HasShadow="False"
            Margin="0"
            Padding="0">
            <Frame.GestureRecognizers>
              <TapGestureRecognizer Tapped="ViewDetails" />
            </Frame.GestureRecognizers>
            <StackLayout Margin="0,0,0,10">
              <Frame
                BackgroundColor="Tomato"
                CornerRadius="4"
                HasShadow="False">
                <StackLayout>
                  <Label Text="{Binding Name}" TextColor="Black" />
                  <Label Text="{Binding Major}" TextColor="Black" />
                </StackLayout>
              </Frame>
            </StackLayout>
          </Frame>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
    <Button
      BackgroundColor="Tomato"
      Clicked="AddStudent"
      FontAttributes="Bold"
      Text="Add Student"
      TextColor="White" />
  </StackLayout>
</ContentPage>