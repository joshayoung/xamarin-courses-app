<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoursesApp.Pages.TeacherPage">
  <ContentPage.Content>
    <StackLayout Padding="10">
      <Label Text="Teacher Details" FontAttributes="Bold" FontSize="24" HorizontalOptions="CenterAndExpand"
             Margin="0,0,0,20"/>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition />
        </Grid.RowDefinitions>
        <Label Text="Name" Grid.Column="0" Grid.Row="0" />
        <Entry 
          Text="{Binding Name, Mode=TwoWay}"
          Grid.Column="0"
          Grid.Row="1"
        />
        
        <Label Text="Age" Grid.Column="1" Grid.Row="0" />
        <Entry 
          Text="{Binding Age, Mode=TwoWay}"
          Grid.Column="1"
          Grid.Row="1"
        />
        
      </Grid>
      <Button Text="Update Teacher" TextColor="White" BackgroundColor="Tomato" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>