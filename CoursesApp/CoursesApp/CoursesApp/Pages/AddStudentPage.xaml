<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
  x:Class="CoursesApp.Pages.AddStudentPage"
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:viewModels="clr-namespace:CoursesApp.ViewModels;assembly=CoursesApp.ViewModels"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
  <ContentPage.Content>
    <StackLayout x:DataType="viewModels:StudentViewModel">
      <Label Text="Name:" />
      <Entry Text="{Binding Name}" />

      <Label Text="Age:" />
      <Entry Text="{Binding Age}" />

      <Label Text="Major:" />
      <Entry Text="{Binding Major}" />

      <Button Clicked="SaveStudent" Text="Save Student" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>