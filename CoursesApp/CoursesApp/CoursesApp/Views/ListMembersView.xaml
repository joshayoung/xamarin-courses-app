<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoursesApp.Views.ListMembersView">
  <ContentView.Content>
    <StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
          <Label Text="Course:" HorizontalOptions="Start" FontSize="24" />
          <Label Text="{Binding Title}" HorizontalOptions="Start" FontSize="24" />
        </StackLayout>
      <ContentView x:Name="innerContent" />
      <Button x:Name="addButton" TextColor="White" FontAttributes="Bold" Clicked="AddClicked"
              Text="{Binding ButtonText}"
              BackgroundColor="Tomato" />
    </StackLayout>
  </ContentView.Content>
</ContentView>